@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu Links="@Links" />
    </div>
    <main>
        <div class="top-row">
            <AccountDisplay />
        </div>
        <article class="content px-4">
            @ChildContent
        </article>
    </main>
</div>

@code {
    [Parameter]
    public IEnumerable<(string cssClass, string href, string name)> Links { get; set; } = null!;

    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}